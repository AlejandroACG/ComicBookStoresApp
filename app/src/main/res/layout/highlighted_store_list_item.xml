<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/highlighted_store_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/highlighted_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#373737"
            android:textColor="#E9E5E5" />

        <TextView
            android:id="@+id/highlighted_store_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#373737"
            android:textColor="#E9E5E5" />

        <TextView
            android:id="@+id/highlighted_store_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#373737"
            android:textColor="#E9E5E5" />

        <TextView
            android:id="@+id/highlighted_store_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#373737"
            android:textColor="#E9E5E5" />

        <TextView
            android:id="@+id/highlighted_store_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#373737"
            android:textColor="#E9E5E5" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>